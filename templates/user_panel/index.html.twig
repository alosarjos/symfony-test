{% extends 'base.html.twig' %}

{% block title %}
    Admin panel
                
            
        
    
{% endblock %}

{% block body %}
    <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    table, td { border: 1px solid black; }
</style>

    <div class="example-wrapper">

        {{ form_start(form) }}
        <button type="submit" class="btn">
            Register                    
                                                        
                                            
                                
                    
        </button>
        {{ form_end(form) }}

        <table>
            {% for dat in entries | sort((a, b) => b.counter <=> a.counter) %}
                <tr>
                    <td>
                        {{ dat.realUrl }}
                    </td>
                    <td>
                        {{ dat.shortUrl }}
                    </td>
                    <td>
                        {{ dat.counter }}
                    </td>
                    <td>
                        {% for stat in dat.statsArray %}
                            {{ stat.deviceType }}
                            - 
                                                        
                            {{ stat.date }}
                        {% endfor %}
                    </td>
                    <td>
                        <a href="/user/panel/delete/{{ dat.shortUrl }}">
                            Delete                                             
                                                                                                            
                                                                                
                                                    
                        </a>
                        <td></tr>
                    {% endfor %}
                </table>
            </div>
        {% endblock %}
        